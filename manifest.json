{
  "manifest_version": 3,
  "name": "Pomodoro TimerV2",
  "version": "1.0",
  "description": "A Pomodoro timer extension",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "alarms",
    "activeTab",
    "notifications",
    "offscreen"
  ],
  "action": {},
  "web_accessible_resources": [
    {
      "resources": ["alarm_sound.mp3"],
      "matches": ["<all_urls>"]
    }
  ],
  "windows": {
    "state": "normal",
    "type": "popup",
    "width": 300,
    "height": 200
  },
  "icons": {},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ]
}
